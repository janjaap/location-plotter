{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2023",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "esnext"
      },
      {
        "name": "next"
      }
    ],
    "incremental": true,
    "paths": {
      "@milgnss/utils/*": [
        "packages/utils/src/*"
      ],
      "@milgnss/socket/*": [
        "apps/socket/src/*"
      ],
      "@milgnss/web/*": [
        "apps/web/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
